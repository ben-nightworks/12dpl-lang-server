{
	"name": "12dpl-lang-server",
	"description": "A language server for 12dPL",
	"author": "Ben Olsen",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/ben-nightworks/12dpl-lang-server"
	},
	"publisher": "ben-olsen",
	"categories": [],
	"keywords": [
		"programming language",
		"12d"
	],
	"engines": {
		"vscode": "^1.74.0"
	},
	"main": "./client/out/extension",
	"activationEvents": [
        "onLanguage:12dPL"
    ],
	"contributes": {
		"languages": [
			{
				"id": "12dpl",
				"aliases": [
					"12dPL",
					"4dmL",
					"4dPL"
				],
				"extensions": [
					".4dm",
					".h"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "12dpl",
				"scopeName": "source.12dpl",
				"path": "./syntax/12dpl.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "12dPL",
			"properties": {
				"langServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"langServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "messages",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.11.7",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"eslint": "^8.26.0",
		"mocha": "^9.2.1",
		"typescript": "^4.9.4"
	}
}
